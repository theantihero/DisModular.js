# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_GUILD_ID=your_guild_id_for_testing

# Bot Intents (Privileged - must be enabled in Discord Developer Portal)
# Set to 'true' only if you've enabled these intents in your Discord app settings
ENABLE_MESSAGE_CONTENT=true
ENABLE_GUILD_MEMBERS=true

# Admin Configuration
# Discord ID of the initial admin user (will be granted admin on first login)
INITIAL_ADMIN_DISCORD_ID=your_discord_id_here

# API Configuration
API_PORT=3002
API_URL=https://dismodular.pulsecord.app
SESSION_SECRET=your_random_session_secret_here

# Dashboard Configuration
VITE_API_URL=https://dismodular.pulsecord.app/api
VITE_DISCORD_OAUTH_CALLBACK=https://dismodular.pulsecord.app/api/auth/discord/callback

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://dismodular:password@postgres:5432/dismodular
POSTGRES_DB=dismodular
POSTGRES_USER=dismodular
POSTGRES_PASSWORD=password
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Environment
NODE_ENV=development #production

